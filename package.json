{
  "name": "web-scraper-notify",
  "private": true,
  "version": "0.1.0",
  "description": "A cross-platform executable that scrap some data on targeted websites and send them through desktop notifications.",
  "author": "Flavien Koehler <koehler.flavien@gmail.com>",
  "keywords": [
    "typescript",
    "cli",
    "scraper",
    "notification"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rm -rf ./dist/ ./exec/",
    "lint": "eslint . --ext .ts",
    "test": "yarn lint && yarn build",
    "build": "yarn clean && tsc",
    "bundle:mac": "yarn build && ./scripts/mac-include-notifier.sh && pkg . -t macos --out-dir ./exec/"
  },
  "devDependencies": {
    "@types/node": "14",
    "@types/node-notifier": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "ava": "^4.2.0",
    "eslint": "^8.14.0",
    "pkg": "^5.6.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "node-notifier": "^10.0.1",
    "scrape-it": "^5.3.2"
  }
}
